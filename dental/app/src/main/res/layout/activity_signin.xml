<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <EditText
        android:id="@+id/edemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgicon"
        android:layout_margin="3dp"
        android:ems="10"
        android:hint="Email"
        android:text=""
        android:textColor="#000" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edpasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edemail"
        android:layout_margin="3dp"
        android:ems="10"
        android:hint="Passcode"
        android:text=""
        android:password="true"
        android:textColor="#000" />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edpasscode"
        android:text="Sign In"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/imgicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/locked3" />

    <RelativeLayout
        android:id="@+id/relregnow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:alpha="0.7"
        android:background="#594343"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tvnewaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/tvnewplantitletag"
            android:text="Register Now"
            android:textColor="#ff8000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvnewplantitletag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvnoaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvnewplantitletag"
            android:layout_margin="2dp"
            android:gravity="right"
            android:text="No account?"
            android:textColor="#fff"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctor"
        android:id="@+id/imageButton"
        android:layout_above="@+id/relregnow"
        android:layout_toLeftOf="@+id/imgicon"
        android:layout_toStartOf="@+id/imgicon"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/doclogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relregnow"
        android:text="Doc login?"
        android:layout_toLeftOf="@+id/imgicon"
        android:layout_toStartOf="@+id/imgicon"
        android:layout_below="@+id/imageButton"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />


</RelativeLayout>